<% @cook.cook_comments.each do |cook_comment| %>
  <!--<%= cook.customer.name %>　#コメント投稿者-->
  <%= cook_comment.created_at.strftime('%Y/%m/%d') %><%= cook_comment.comment %>
  <% if cook_comment.customer == current_customer %>

  <%= link_to "削除", cook_cook_comment_path(cook_comment.cook, cook_comment), method: :delete,remote: true,class: "btn btn-danger pull-right" %>
  <% end %>
  <%= form_with(model:[cook,cook_comment],remote: true) do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメント記入欄",class: "btn btn-danger pull-right"%>
  <%= f.submit "送信",class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <% end %>
<% end %>
