<div class="container">
  <div class="row m-5">
    <div class="col-2">
      <table class="table table-bordered">
    </div>
    <div class="col-4 text-center">
      <h3 class="d-inline-flex px-0"><%= image_tag @cook.get_image, size: "300x250" %></h3>
    </div>

    <div class="col-6">
      <table class="table table-borderless d-inline-flex mx-3 p-0">
        <tr>
          <td id="bookmark_buttons_<%= @cook.id %>">
          <%= render "public/bookmarks/bookmarks", cook: @cook %>
          </td>
        </tr>
        <tr>
           <td><h3><%= @cook.name %></h3></td>
        </tr>
        <tr>
           <td><h5><%= @cook.required_time %></h5></td>
        </tr>
        <tr>
           <td><h5><%= @cook.foods %></h5></td>
        </tr>
        <tr>
           <td><h5><%= @cook.recipe %></h5></td>
        </tr>
        <tr>
          <td><%= link_to "編集する", edit_cook_path(@cook) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>