<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <h4 class="m-0"><i class="fas fa-bookmark"></i>Bookmark List</h4>
      <div class="row gx-4 gx-lg-2 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% if @cooks.present? %>
        <% @cooks.each do |cook| %>
        <div class="col-md-2 mr-3v" style="vw: 260px;">
        <%= image_tag cook.get_image, size: "260x260" %>
          <div class="row">
            <h5><strong><%= link_to cook.name, cook_path(cook.id),class: 'nav-link text-dark' %></strong></h5>
          </div>
          <%= cook.required_time %>min
        </div>
        <% end %>
      <% end %>
      </div>
    <div class="col-2 offset-5"><%= paginate @cooks %></div>
  </div>
</section>

