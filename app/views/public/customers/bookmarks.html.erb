<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <h4 class="m-0"><i class="fas fa-bookmark"></i>ブックマーク</h4>
    <br>
    <br>
      <div class="row  row-cols-xl-4 justify-content-center">
      <!--ブックマークが存在した場合表示  -->
      <% if @cooks.present? %>
        <% @cooks.each do |cook| %>
        <div class="card-wrapper">
          <div class="card-img">
            <%= link_to(cook) do %>
              <%= image_tag cook.get_image, size: "260x200" %>
            <% end %>
          </div>
          <div class="card-box">
            <h6><%= link_to cook.name, cook_path(cook.id),class: 'nav-link text-dark' %></h6>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>

    <div class="col-2 offset-5"><%= paginate @cooks %></div>
  </div>
</section>

