<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mr-3v">
      <h4 class="m-0"><i class="fas fa-bookmark"></i>ブックマーク一覧</h4>

    <% if @bookmark.present? %>
      <% @bookmark.each do |cook| %>
      <table class="col-2 table table-borderless table table-sm d-inline-flex m-4 p-0">
        <tr>
          <td><%= image_tag cook.get_image, size: "200x150" %></td>
        </tr>
        <tr>
          <td><%= link_to cook.name, cook_path(cook.id) %></td>
        </tr>
        <tr>
          <td>所要時間:<%= cook.required_time %>分</td>
        </tr>
      </table>
      <% end %>
    <% end %>
    </div>
  </div>
</div>