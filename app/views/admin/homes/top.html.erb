<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto">
      <br>
      <h3>投稿一覧</h3>
      <table class='table table-hover table-inverse'>
        <thead>
        <tr>
          <th>料理ID</th>
          <th>料理画像</th>
          <th>料理名</th>
          <th>投稿者</th>
        </tr>
        </thead>
        <tbody>
        <% @cooks.each do |cook| %>
        <tr>
          <td><%= cook.id %></td>
          <td><%= image_tag cook.get_image, size: "180x120" %></td>
          <td><%= link_to cook.name, admin_cook_path(cook) %></td>
          <td><%= cook.customer.name %></td>
        </tr>
        <% end %>
        </tbody>
       </table>
    </div>
    <div class="col-2 offset-5"><%= paginate @cooks %></div>
  </div>
</div>









