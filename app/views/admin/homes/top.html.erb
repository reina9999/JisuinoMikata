<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-3 offset-1 d-inline-flex">
      <div class="bg-light px-3">
      <h4 class="m-0">投稿一覧</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
    <br>
    <table class='table table-borderless'>
      <thead>
        <tr class="table-secondary">
          <th>料理ID</th>
          <th>料理名</th>
          <th>投稿者</th>
        </tr>
      </thead>
      <tbody>
      <% @cooks.each do |cook| %>
      <tr>
        <td><%= cook.id %></td>
        <td><%= link_to cook.name, admin_cook_path(cook) %></td>
        <td><%= cook.customer.name %></td>
      </tr>
      <% end %>
      </tbody>
     </table>
     </div>
    <div class="col-2 offset-5"><%= paginate @cooks %></div>
  </div>
</div>


