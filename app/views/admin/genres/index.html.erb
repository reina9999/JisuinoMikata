<div class="container">
  <div class="row my-5">
    <div class="col-4 offset-1 d-inline-flex">
      <div class="bg-light px-3">
        <h4 class="m-0">ジャンル登録/一覧</h4>
      </div>
    </div>
  </div>
  <%= render "public/cooks/errors", cook: @genre %>
  <%= render "form", genre: @genre %>
  <div class="row mt-5">
    <div class="col-4">
      <table class='table'>
        <thead>
          <tr class="table-secondary">
            <th colspan="2" class="px-5">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genres| %>
          <tr>
            <td><%-genres.name %></td>
            <td style="width: 130Px"><%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>