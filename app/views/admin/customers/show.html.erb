<div class="container ">
  <div class="row my-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div style="border: solid thin ">
        <br>
        <h3 class="text-center text-secondary mt-2"><%= @customer.name %>さんの会員情報詳細</h3>
        <br>
        <div class="text-center text-secondary">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td style="width: 250px">会員ID</td>
                <td><%= @customer.id %></td>
              </tr>
              <tr>
                <td style="width: 250px">名前</td>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <td style="width: 250px">メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
              <tr>
                <td style="width: 250px">会員ステータス</td>
                <td>
                <% if @customer.is_deleted %>
                 <p class="text-muted font-weight-bold">無効</p>
                <% else %>
                  <P class="text-success font-weight-bold">有効</P>
                <% end %>
                </td>
              </tr>
              </tbody>
            </table>
            <div class="text-center">
              <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-outline-secondary" %>
            </div>
            <br>
            <br>
        </div>
      </div>
    </div>
  </div>
</div>