<div class="container ">
  <div class="row my-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div style="border: solid thin ">
        <br>
        <h3 class="text-center text-secondary mt-2"><%= @customer.name %>さんの会員情報編集</h3>
        <br>
        <div class="text-center text-secondary">
          <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td style="width: 150px">会員ID</td>
                <td><%= @customer.id %></td>
              </tr>
              <tr>
                <td style="width: 150px">名前</td>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <td style="width: 150px">メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
              <tr>
                <td style="width: 150px">会員ステータス</td>
                <td>
                  <%= f.radio_button :is_deleted, false %>
                  <%= f.label :is_deleted, "有効", value: false %>
                  <%= f.radio_button :is_deleted, true %>
                  <%= f.label :is_deleted, "無効", value: true %>
                </td>
              </tr>
              <tr>
                <td colspan=2>
                <%= f.submit "更新", class: "btn btn-outline-dark" %>
                </td>
              </tr>
            </tbody>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


