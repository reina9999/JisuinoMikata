<div class="container">
  <div class="row">
    <div class="col-lg-8">
    <br>
    <h3><%= @customer.name %>さんの会員情報編集</h3>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員id</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>名前</td>
            <td><%= f.text_field :name, class:'form-control' %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class:'form-control' %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
                 <%= f.radio_button :is_deleted, false %>
                 <%= f.label :is_deleted, "有効", value: false %>
                 <%= f.radio_button :is_deleted, true %>
                 <%= f.label :is_deleted, "無効", value: true %>
            </td>
          </tr>
          <tr>
            <td colspan=2>
            </td>
        </tbody>
    </table>
    <div class="form-group">
      <%= f.submit "変更を保存", class:'btn btn-success' %>
    </div>
    <% end %>
    </div>
  </div>
</div>

