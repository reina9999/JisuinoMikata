<!--管理者側で投稿タグを追加-->
<h3>タグ一覧・追加</h3>
<%= form_with model: @tag,url: admin_tags_path, method: :post do |f| %>
  <td><%= f.label :"タグ名", class: "mr-3" %></td>
  <td><%= f.text_field :name, class: "mr-5" %></td>
  <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>
<% end %>

<th>タグ一覧</th>
<% @tags.each do |tag| %>
  <td><%= tag.name %></td>
  <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn-success" %></td>
<%end%>