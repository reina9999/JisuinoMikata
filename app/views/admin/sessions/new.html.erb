<div class="container ">
  <div class="row my-5">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div style="border: solid thin ">
        <br>
        <h3 class="text-center text-secondary mt-2">管理者ログイン</h3>
        <br>
        <div class="text-center text-secondary">
        <%= form_with model: resource, url: session_path(resource) do |f| %>
          <div class="form-group">
            <%= f.label :email,"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="form-group">
            <%= f.label :password,"パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me,"次回から自動入力する" %>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.submit "ログイン",class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
        <%= render "admin/shared/links" %>
        <br>
        </div>
      </div>
    </div>
  </div>
</div>

